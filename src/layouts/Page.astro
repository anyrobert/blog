---
import BaseHead from "../components/BaseHead.astro";


type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="dark:bg-gray-900 dark:text-white">
    <main class="container m-4">
      <article>
        <slot />
      </article>
    </main>
  </body>
</html>
